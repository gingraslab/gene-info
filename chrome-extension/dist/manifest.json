{
  "manifest_version": 2,
  "name": "Gene info",
  "version": "0.0.1",
  "version_name": "0.0.1 alpha",
  "description": "Find gene information by clicking an official gene name on any webpage. Only human gene information will be retrieved currently.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "author": "James Knight",
  "background": {
    "persistant": false,
    "scripts": ["event.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content.css"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "icon16.png",
      "24": "icon24.png",
      "32": "icon32.png"
    },
    "default_title": "Gene info",
    "default_popup": "popup.html"
  },
  "permissions": [
    "http://localhost:8002/",
    "storage",
    "tabs"
  ]
}
