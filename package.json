{
  "name": "gene-info",
  "version": "1.0.0",
  "description": "Chrome extension for retrieving gene information",
  "main": "package.json",
  "scripts": {
    "dev-api": "NODE_ENV=development nodemon node api/index.js",
    "dev-ext": "NODE_ENV=development webpack --watch --config webpack.dev.js",
    "dev-ext-ff": "NODE_ENV=development webpack --watch --config webpack.dev-ff.js",
    "doc-server": "http-server docs",
    "prod-api": "NODE_ENV=production n use 10.13.0 api/index.js",
    "prod-api-forever": "NODE_ENV=production forever start -c /usr/local/n/versions/node/10.13.0/bin/node -a --uid 'gene-info-api' -l /mnt/prohitsdata/html/ProhitsTools/forever/gene-info.log --pidFile /mnt/prohitsdata/html/ProhitsTools/forever/pids/gene-info.pid api/index.js",
    "prod-ext": "NODE_ENV=production webpack --config webpack.prod.js",
    "prod-test-ext": "NODE_ENV=production webpack --config webpack.prod-test.js",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/knightjdr/gene-info.git"
  },
  "author": "James Knight",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/knightjdr/gene-info/issues"
  },
  "homepage": "https://github.com/knightjdr/gene-info#readme",
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^2.1.0",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "jest": "^23.6.0",
    "jshint": "^2.9.6",
    "jshint-stylish": "^2.2.1",
    "md5": "^2.2.1",
    "memory-streams": "^0.1.3",
    "mini-css-extract-plugin": "^0.5.0",
    "mock-fs": "^4.8.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.28.2",
    "webpack-chrome-extension-reloader": "^1.1.1",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.1.5"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cors": "^2.8.3",
    "express": "^4.16.4",
    "ftp": "^0.3.10",
    "http": "0.0.0",
    "line-by-line": "^0.1.6",
    "mkdirp": "^0.5.1",
    "mongodb": "^3.0.4",
    "node-fetch": "^2.3.0",
    "promise": "^7.1.1",
    "slim-select": "^1.18.7",
    "winston": "^2.4.0",
    "xml2js": "^0.4.19",
    "yauzl": "^2.10.0"
  },
  "nodemonConfig": {
    "ext": ".js",
    "ignore": [
      "log/*"
    ],
    "watch": [
      "api/*"
    ],
    "verbose": true
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules"
    ]
  }
}
